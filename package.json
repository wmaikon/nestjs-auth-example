{
  "name": "nestjs-auth-example",
  "version": "1.0.0",
  "description": "",
  "author": "cloakedch",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc -p tsconfig.production.json",
    "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json --forceExit",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/mongoose": "^5.1.0",
    "@types/jsonwebtoken": "^7.2.8",
    "bcrypt": "^3.0.0",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "fastify-formbody": "^2.0.1",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.8",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/bcrypt": "^2.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/mongoose": "^5.2.5",
    "@types/node": "^10.7.0",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "mockgoose": "^7.3.5",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "5.11.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/$1",
      "@user/(.*)": "<rootDir>/user/$1",
      "@auth/(.*)": "<rootDir>/auth/$1",
      "@token/(.*)": "<rootDir>/token/$1",
      "@constants/(.*)": "<rootDir>/common/constants/$1",
      "@database/(.*)": "<rootDir>/common/database/$1",
      "@decorators/(.*)": "<rootDir>/common/decorators/$1",
      "@filters/(.*)": "<rootDir>/common/filters/$1",
      "@guards/(.*)": "<rootDir>/common/guards/$1",
      "@pipes/(.*)": "<rootDir>/common/pipes/$1"
    }
  }
}
